@page
@model RazorPagesUniversidad.Pages_Estudiantes.IndexModel
<link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;700&display=swap" rel="stylesheet">
@{
    ViewData["Title"] = "Index";
}
<style>
    body{
        background: url(https://www.lasallebajio.edu.mx/comunidad/documents/imagotipo/Plantilla%20para%20Presentaci%C3%B3n/plantillasinstitucionales-07.jpg);
        background-repeat: no-repeat center;
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Pixelify Sans', sans-serif;
        height: auto;
    }
    a:hover{
        opacity: 0.5;
    }
    text{
        font-family: 'Pixelify Sans', sans-serif;
        font-size: auto;
        color: black;
    }
</style>
<h1 style="font-weight: bolder;">Estudiantes</h1>

<p>
    <a asp-page="Create" style="color: black;">Create New</a>
</p>
<form>
 	<p>
        <select asp-for="MovieGenre" asp-items="Model.Genres"> <option value="">All</option> </select>
	 	Title: <input type="text" asp-for="SearchString" style="width: 750px; background-color:none;"/> <input type="submit" value="Filter" />
 	</p>
 </form>
<table class="table"style="color:black; font-weight:bolder;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Fecha_inscripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estudiante) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_inscripcion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id_estudiante" style="color:black; text-decoration-color :white">Edit &nbsp;&nbsp;</a> 
                <a asp-page="./Details" asp-route-id="@item.Id_estudiante" style="color:black; text-decoration-color :white">Details&nbsp;&nbsp;</a> 
                <a asp-page="./Delete" asp-route-id="@item.Id_estudiante" style="color:black; text-decoration-color :white">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
