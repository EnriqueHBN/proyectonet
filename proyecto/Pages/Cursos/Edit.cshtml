@page
@model RazorPagesUniversidad.Pages_Cursos.EditModel
<link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;700&display=swap" rel="stylesheet">
@{
    ViewData["Title"] = "Edit";
}
<style>
    body{
        background: url(https://www.lasallebajio.edu.mx/comunidad/documents/imagotipo/Plantilla%20para%20Presentaci%C3%B3n/plantillasinstitucionales-07.jpg);
        background-repeat: no-repeat center;
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Pixelify Sans', sans-serif;
        height: auto;
    }
</style>
<h1 style="font-weight: bolder;">Editar curso</h1>

<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Curso.Id_curso" />
            <div class="form-group">
                <label asp-for="Curso.Titulo" class="control-label"></label>
                <input asp-for="Curso.Titulo" class="form-control" />
                <span asp-validation-for="Curso.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso.Creditos" class="control-label"></label>
                <input asp-for="Curso.Creditos" class="form-control" />
                <span asp-validation-for="Curso.Creditos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
