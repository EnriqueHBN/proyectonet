            </div>
            <div class="form-group">
                <label asp-for="Inscripcion.Grado" class="control-label"></label>
                <input asp-for="Inscripcion.Grado" class="form-control" />
                <span asp-validation-for="Inscripcion.Grado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

